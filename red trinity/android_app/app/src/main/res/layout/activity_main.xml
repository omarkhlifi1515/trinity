<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#0F172A">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red Trinity"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penetration Testing Control"
        android:textColor="#94A3B8"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disconnected"
        android:textColor="#EF4444"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="#1E293B"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/subtitleText" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Connection"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3B82F6"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/statusText" />

    <EditText
        android:id="@+id/editTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter target (IP or domain)"
        android:textColor="#FFFFFF"
        android:textColorHint="#64748B"
        android:background="#1E293B"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnConnect" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editTarget">

        <Button
            android:id="@+id/btnNmapScan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nmap Scan"
            android:textColor="#FFFFFF"
            android:backgroundTint="#16A34A"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnListTools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="List Tools"
            android:textColor="#FFFFFF"
            android:backgroundTint="#8B5CF6"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonLayout">

        <Button
            android:id="@+id/btnSystemInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="System Info"
            android:textColor="#FFFFFF"
            android:backgroundTint="#F59E0B"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="History"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6366F1"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonLayout2"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/outputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Output will appear here..."
            android:textColor="#E2E8F0"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:background="#1E293B"
            android:minHeight="200dp" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

